
@model EndscreenViewModel
@using System.Text;

<div id="cardcontainer" class="d-flex justify-content-center mb-5">
    @foreach (var x in @Model.shows)
    {
<div class="card mr-2" style="width: 30rem;">
    <img src="@x.CoverPath" class="card-img-top">
    <div class="card-body d-flex flex-column h-100">
        <h5 class="card-title">@x.Name</h5>
        <p class="card-text">@x.Description</p>
        @{ var builder = new StringBuilder("<p class='card-text align-self-end mt-auto w-100'><b>Genres: </b>");
                            var genres = x.Genres.ToArray();
            @for (int i = 0; i < genres.Length; i++)
            {
                if (i != 0)
                {
                    builder.Append(", ");
                }
                builder.Append(genres[i].Name);
            } builder.Append("</p>"); }
        @Html.Raw(@builder.ToString())
    </div>
</div>
}
</div>

<div class="d-flex justify-content-center">
    <a class="btn btn-success btn-lg w-100" asp-area="" asp-controller="Main" asp-action="Index">Finish</a>
</div>